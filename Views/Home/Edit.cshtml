@model HomeEditViewModel
@{
    ViewBag.Title = "Update Employee";
    var _emp_photo = "~/images/" + (Model.existingPhoto ?? "dp.jpg");
}

<h1>Update Employee</h1>
<form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" method="post" class="mt-3">
    <input hidden asp-for="id" />
    <input hidden asp-for="existingPhoto" />
    <div class="form-group row m-2 ">
        <label asp-for="name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="name" placeholder="Name" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row m-2">
        <label asp-for="email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="email" placeholder="Email" />
            <span asp-validation-for="email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row m-2">
        <label class="col-sm-2 col-form-label" asp-for="department"></label>
        <div class="col-sm-10">
            <select asp-for="department" class="form-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="">Select Department</option>
            </select>
            <span asp-validation-for="department" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row m-2">
        <label asp-for="photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="mb-3">
                <input class="form-control form-control-sm" asp-for="photo" id="photo" type="file">
            </div>
        </div>
    </div>
    <div>
        <img src="@_emp_photo" width="400px" height="200px" asp-append-version="true" />
    </div>

    <div class="form-group row m-2" class="text-danger" asp-validation-summary="All"></div>


    <div class="form-group row m-2">
        <div class="col-sm-10 d-flex w-100">
            <button type="submit" class="btn btn-success w-60">Update</button>
            <a asp-controller="home" asp-action="allEmployees" class="btn btn-danger w-60">Back</a>
        </div>
    </div>
</form>

