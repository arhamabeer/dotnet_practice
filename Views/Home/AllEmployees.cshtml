@model List<dotnet_mvc.Models.Employee>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "All Employees";
}

    <div>
        <div>
            All Employees
        </div>
        <div>
            <table>
                <thead>
                    <tr>
                        <td>ID</td>
                        <td>Name</td>
                        <td>Email</td>
                        <td>Department</td>
                    </tr>
                </thead>
                <tbody>
                    @{
                foreach(var item in Model)
                {
                    <tr>
                         <td>@item.id</td>
                         <td>@item.name</td>
                         <td>@item.email</td>
                         <td>@item.department</td>
                    </tr>
                }
            }
                </tbody>
            </table>            
        </div>
    </div>
